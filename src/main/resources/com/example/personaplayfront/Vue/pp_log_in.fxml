<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personaplayfront.Controller.Frontend.PpLogInController">
   <children>
      <VBox alignment="CENTER" prefHeight="720" prefWidth="1280" spacing="10">
      
          <Label style="-fx-font-size: 24;" text="Log In" />
          <TextField fx:id="usernameTextField" promptText="Username" />
          <TextField fx:id="passwordTextField" promptText="Password" />
          <Button onAction="#handleLogIn" text="Log In" />
          <Button onAction="#switchToSignUpView" text="Sign Up" />
      
          <CheckBox fx:id="rememberMeCheckBox" text="Remember Me?" />
          <Button onAction="#switchToForgotPasswordView" text="Forgot Password" />
      </VBox>
   </children>
</AnchorPane>
