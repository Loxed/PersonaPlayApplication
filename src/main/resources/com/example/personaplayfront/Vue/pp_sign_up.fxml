<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personaplayfront.Controller.Frontend.PpSignUpController">
   <children>
      <VBox alignment="CENTER" spacing="10">
      
          <VBox fx:id="signUpView" alignment="CENTER" spacing="10">
              <Label style="-fx-font-size: 24;" text="Sign Up" />
              <TextField fx:id="usernameTextField" promptText="Username" />
              <TextField fx:id="passwordTextField" promptText="Password" />
              <TextField fx:id="emailTextField" promptText="Email" />
              <Button onAction="#handleSignUp" text="Sign Up" />
              <Button onAction="#switchToLogInView" text="Log In" />
          </VBox>
      
          <VBox fx:id="confirmSignUpView" alignment="CENTER" spacing="10">
              <Label style="-fx-font-size: 24;" text="Confirm Sign Up" />
              <TextField fx:id="confirmationCodeTextField" promptText="Confirmation Code" />
              <Button onAction="#handleConfirmSignUp" text="Confirm Sign Up" />
              <Button onAction="#switchToLogInView" text="Log In" />
          </VBox>
      
          </VBox>
   </children>
</AnchorPane>
