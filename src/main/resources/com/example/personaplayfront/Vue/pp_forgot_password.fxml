<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personaplayfront.Controller.Frontend.PpForgotPasswordController">
   <children>
      <ScrollPane fx:id="scrollpage" hbarPolicy="NEVER" prefHeight="720.0" prefWidth="1280.0" vbarPolicy="NEVER">
         <content>
            <VBox alignment="CENTER" prefHeight="2160.0" spacing="10" style="-fx-background-color: #2d2d2d;">
               <children>
                  <VBox fx:id="forgotPasswordVBox" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" style="-fx-background-color: #202020;">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                                 <children>
                                    <Label style="-fx-font-size: 24px; -fx-text-fill: #ffffff; -fx-font-family: 'Eras Demi ITC'; -fx-padding: 10px 0;" text="Enter your email to reset your password" />
                                    <TextField fx:id="emailTextField" promptText="Email" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;">
                                       <VBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10">
                                       <children>
                                          <Button onAction="#switchToForgotPasswordView" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;" text="Send Email" />
                                          <Button onAction="#switchToLogInView" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;" text="Back to Log In page" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox fx:id="enterCodeVBox" alignment="CENTER" disable="true" prefHeight="720.0" prefWidth="1280.0" spacing="10" style="-fx-background-color: #2d2d2d;">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                                 <children>
                                    <Label style="-fx-font-size: 24px; -fx-text-fill: #ffffff; -fx-font-family: 'Eras Demi ITC'; -fx-padding: 10px 0;" text="Enter Reset Code" />
                                    <TextField fx:id="codeTextField" alignment="CENTER" promptText="Reset Code" style="-fx-background-color: #202020; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;">
                                       <VBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10">
                                       <children>
                                          <Button onAction="#confirmResetCode" style="-fx-background-color: #202020; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;" text="Confirm" />
                                          <Button onAction="#switchToLogInView" style="-fx-background-color: #202020; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;" text="Back to Log In page" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox fx:id="resetPasswordVBox" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" style="-fx-background-color: #202020;">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                                 <children>
                                    <Label style="-fx-font-size: 24px; -fx-text-fill: #ffffff; -fx-font-family: 'Eras Demi ITC'; -fx-padding: 10px 0;" text="Enter your new password" />
                                    <TextField fx:id="passwordTextField" promptText="Password" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;">
                                       <VBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10">
                                       <children>
                                          <Button onAction="#resetPassword" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;" text="Reset password" />
                                          <Button onAction="#switchToLogInView" style="-fx-background-color: #2d2d2d; -fx-text-fill: #ffffff; -fx-border-color: transparent; -fx-border-radius: 5px; -fx-padding: 5px;" text="Back to Log In page" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
